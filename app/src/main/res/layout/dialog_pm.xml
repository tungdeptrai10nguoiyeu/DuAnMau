<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialogpm_Tile"
        android:layout_width="248dp"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:layout_gravity="center"
        android:text="Thêm Phiếu mượn"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialogpm_edmaPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã phiếu mượn" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/dialogpm_spn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/dialogpm_spn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/dialogpm_tvNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/dialogpm_tvTienThue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="10dp"/>

    <CheckBox
        android:id="@+id/dialogpm_chk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đã trả sách"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogpm_btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:text="Lưu" />

        <Button
            android:id="@+id/dialogpm_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="hủy" />
    </LinearLayout>

</LinearLayout>